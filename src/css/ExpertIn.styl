.ExpertIn
  background-color: #f1f8ff
  padding 100px 0
.ExpertIn-items
  display flex
  flex-wrap wrap
  justify-content space-between
  & .item
    margin-top 101px
    width 30%
    min-width 300px
    text-align  center
    & h3
      color: #3677fd
      font-size: 24px
      font-weight: 700
      line-height: 24px
      text-transform: uppercase
    & p
      color: #5a5a5a
      font-size: 16px
      font-weight: 400
      line-height: 35px
  & .item-img
    display flex
    justify-content center
    align-items center
    margin 0 auto 65px
    border-radius 50%
    border: 1px solid #b7c0c9
    width: 140px
    height: 140px

