body{
  width 100%
  overflow-x hidden

}
html
  scroll-behavior: smooth
html *
  box-sizing border-box
  font-family: Lato, sans-serif;
.container
  width 90%
  margin auto
  max-width 1170px;

ul
  list-style-type none
  margin 0
  padding 0
a

  text-decoration none
h2
  text-align center
  background-image: linear-gradient(51deg, #3695ff 0%, #3564fc 100%)
  background-clip: text
  color: #3677fd
  font-size: 50px
  font-weight: 300
  line-height: 35.12px
